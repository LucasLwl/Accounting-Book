<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/white">

    </View>

    <LinearLayout
        android:id="@+id/ll_item_detail_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/detail_item_margin_left"
        android:layout_marginRight="@dimen/detail_item_margin_right"
        android:background="@drawable/item_detail_two_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/detail_item_margin_bottom"
        android:paddingTop="@dimen/detail_item_margin_bottom">

        <com.phone.konka.accountingbook.View.DateTextView
            android:id="@+id/dv_two_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/item_text_big" />


        <TextView
            android:id="@+id/tv_two_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_small" />


        <TextView
            android:id="@+id/tv_two_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_small" />


        <TextView
            android:id="@+id/tv_two_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_small" />
    </LinearLayout>
</LinearLayout>
