<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dir_margin_left">

    <ImageView
        android:id="@+id/img_item_fileIcon"
        android:layout_width="@dimen/icon_width_big"
        android:layout_height="@dimen/icon_height_big" />

    <TextView
        android:id="@+id/tv_item_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/item_margin_left"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/item_text_mid" />

</LinearLayout>
