<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_dragGridView_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_dragGridView_item_tag"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height" />

        <TextView
            android:id="@+id/tv_dragGridView_item_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/item_text"
            android:textSize="@dimen/item_text_small" />
    </LinearLayout>

    <ImageView
        android:id="@+id/img_dragGridView_item_opera"
        android:layout_width="@dimen/icon_width_small"
        android:layout_height="@dimen/icon_height_small"
        android:layout_toRightOf="@+id/ll_dragGridView_item" />


</RelativeLayout>
